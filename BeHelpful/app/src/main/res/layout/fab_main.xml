<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="visible"
    android:background="@color/simplyWhite"

    android:id="@+id/fab_menu"
    android:focusable="false">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addMarkId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_plus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addMarkId2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_plus"
        android:layout_above="@+id/addMarkId1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:fabSize="mini"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addMarkId3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_plus"
        android:layout_above="@+id/addMarkId2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:fabSize="mini"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addMarkId4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_plus"
        android:layout_above="@+id/addMarkId3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:fabSize="mini"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addMarkId5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_plus"
        android:layout_above="@+id/addMarkId4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:fabSize="mini"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/addMarkId1"
        android:layout_toStartOf="@+id/addMarkId1" />
</RelativeLayout>

